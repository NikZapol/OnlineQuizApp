<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:gravity="center"
    android:background="@drawable/background"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/quiz_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тест Теория ПДД РФ"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="50sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Автошкола Пилот+"
        android:layout_marginTop="5sp"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startQuizBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="50sp"
        android:layout_marginTop="50sp"
        android:text="Начать тест"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:background="@drawable/round_back_secondary_100"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/quitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="50sp"
        android:layout_marginTop="20sp"
        android:text="Выйти из приложения"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:background="@drawable/round_back_selected_option_red"/>
</LinearLayout>